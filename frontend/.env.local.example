# Environment configuration for Fortify AI Frontend
# Copy this file to .env.local and update the values

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Database URL (points to the shared db in parent directory)
DATABASE_URL="postgresql://fortify:fortify@localhost:5432/fortify"

# Scan Worker URL
SCAN_WORKER_URL=http://localhost:8000

# Development optimizations to prevent tab refresh issues
# These settings help reduce memory usage and prevent browser tab discarding

# Disable Node.js warnings that can clutter development console
NODE_NO_WARNINGS=1

# Optimize Next.js for memory usage
NEXT_TELEMETRY_DISABLED=1